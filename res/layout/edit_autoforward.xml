<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#eeeeee"
            android:padding="5dp"
            android:text="@string/autoforward_label"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background="#eeeeee"
            android:padding="5dp"
            android:text="@string/autoforward_description"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/autoforward_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Name" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/autoforward_keywords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Keywords (comma seperated)" />

        <EditText
            android:id="@+id/autoforward_forwardtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="left|top"
            android:hint="Message to forward to recipients"
            android:inputType="textMultiLine"
            android:lines="5" />

        <TextView
            android:id="@+id/temp_recipients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recipients : "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/autoforward_recipients"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Select Recipients" />

        <Button
            android:id="@+id/autoforward_save_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Save" />
    </LinearLayout>

</ScrollView>